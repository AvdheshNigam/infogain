{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "src/index.ts",
    "tests/index.test.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}